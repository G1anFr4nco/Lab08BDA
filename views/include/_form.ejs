 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Nombres</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Mark Stoenis">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Apellidos</label>
            <input type="text" name="email" value="" placeholder="Socso Sotomayor">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Genero</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Masculino" >
                <label for="radio-2" class="radio-label">Masculino</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Femenino" >
                <label for="radio-3" class="radio-label">Femenino</label>
            </div>
        </div>

        <div class="form-group">
            <label for="status" class="text-light">Estado</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Trabajando" >
                <label for="radio-4" class="radio-label">Trabajando</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Inactivo" >
                <label for="radio-5" class="radio-label">Inactivo</label>
            </div>
        </div>

        <div class="form-group">
            <label for="puesto" class="text-light">Puesto</label>
            <div class="radio inline">
                <input type="radio" id="radio-6" name="puesto" value="Produccion" >
                <label for="radio-6" class="radio-label">Produccion</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-7" name="puesto" value="Ventas" >
                <label for="radio-7" class="radio-label">Ventas</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>